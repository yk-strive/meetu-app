#chatPage {
  overflow: hidden;
}
#chatPage .loading {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-pack: center;
    -webkit-justify-content: center;
            justify-content: center;
}
@-webkit-keyframes stretchdelay {
0%,
  40%,
  100% {
    -webkit-transform: scaleY(0.6);
            transform: scaleY(0.6);
}
20% {
    -webkit-transform: scaleY(1);
            transform: scaleY(1);
}
}
@keyframes stretchdelay {
0%,
  40%,
  100% {
    -webkit-transform: scaleY(0.6);
            transform: scaleY(0.6);
}
20% {
    -webkit-transform: scaleY(1);
            transform: scaleY(1);
}
}
#chatPage .loading .spinner {
      margin: 20rpx 0;
      width: 60rpx;
      height: 100rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
              justify-content: space-between;
}
#chatPage .loading .spinner view {
        background-color: #f06c7a;
        height: 50rpx;
        width: 6rpx;
        border-radius: 6rpx;
        -webkit-animation: stretchdelay 1.2s infinite ease-in-out;
                animation: stretchdelay 1.2s infinite ease-in-out;
}
#chatPage .loading .spinner .rect2 {
        -webkit-animation-delay: -1.1s;
                animation-delay: -1.1s;
}
#chatPage .loading .spinner .rect3 {
        -webkit-animation-delay: -1.0s;
                animation-delay: -1.0s;
}
#chatPage .loading .spinner .rect4 {
        -webkit-animation-delay: -0.9s;
                animation-delay: -0.9s;
}
#chatPage .loading .spinner .rect5 {
        -webkit-animation-delay: -0.8s;
                animation-delay: -0.8s;
}
#chatPage .img-send {
    width: 94rpx;
    height: 90rpx;
    margin: 0;
}
#chatPage .btn-send {
    position: relative;
    width: 128rpx;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 50rpx;
}
#chatPage .btn-send input {
      position: absolute;
      top: 0;
      left: 0;
      opacity: 0;
}
#chatPage .cu-chat {
    padding-top: 30rpx;
}
#chatPage .cu-chat .cu-item.self > .main .content::after {
      background: #616DEC;
}
#chatPage .cu-chat .cu-item {
      padding: 50rpx 30rpx;
}
#chatPage .cu-chat .cu-item .date {
      position: absolute;
      top: -4rpx;
      left: 160rpx;
      bottom: 0;
      width: calc(100% - 320rpx);
      height: 30rpx;
      font-size: 24rpx;
      color: #8799a3;
      text-align: center;
}
#chatPage .cu-chat .cu-item .date text {
        background-color: rgba(0, 0, 0, 0.3);
        padding: 4rpx 20rpx;
}
#chatPage .cu-bar.input {
    padding-right: 0;
}
#chatPage .cu-bar.input textarea {
      height: 100%;
      min-height: 90rpx;
      margin: 0;
      padding: 20rpx 20rpx 12rpx;
      border-radius: none;
      border-left: 1px solid #CCCCCC;
}
#chatPage .cu-bar {
    min-height: 90rpx;
    background-color: #FFFFFF;
}

