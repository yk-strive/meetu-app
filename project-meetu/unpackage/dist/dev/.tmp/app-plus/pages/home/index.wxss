#homePage .home_bottom_act .toast {
    top: -60%;
    width: 314rpx;
    height: 128rpx;
    padding: 30rpx 40rpx;
    background-color: #453C5B;
    border-radius: 10rpx;
    box-shadow: 0 0 10rpx 10rpx #2E2D53;
    text-align: center;
    line-height: 2;
}
#homePage .home_bottom_act .toast::after {
      content: '';
      position: absolute;
      z-index: -1;
      bottom: -16rpx;
      left: 50%;
      -webkit-transform: translateX(-50%);
              transform: translateX(-50%);
      border-left: 60rpx solid transparent;
      border-right: 60rpx solid transparent;
      border-top: 60rpx solid #453C5B;
}
#homePage .home_bottom_act .signal-ani {
    opacity: 0;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.5);
    box-shadow: 0 0 8rpx 6rpx rgba(255, 255, 255, 0.3);
}
#homePage .home_bottom_act .signal-animation {
    -webkit-animation: signal-animation 2s 2s linear both;
            animation: signal-animation 2s 2s linear both;
}
@-webkit-keyframes signal-animation {
0% {
    opacity: 1;
}
20% {
    opacity: 1;
    top: -40rpx;
}
40% {
    opacity: .4;
    top: -100rpx;
    background-color: rgba(255, 255, 255, 0.2);
    box-shadow: 0 0 8rpx 6rpx rgba(255, 255, 255, 0.5);
}
80% {
    opacity: 1;
    top: -300rpx;
    background-color: rgba(255, 255, 255, 0.5);
    box-shadow: 0 0 8rpx 6rpx rgba(255, 255, 255, 0.3);
}
100% {
    opacity: 0;
    top: -600rpx;
    background-color: rgba(255, 255, 255, 0.3);
    box-shadow: 0 0 8rpx 6rpx rgba(255, 255, 255, 0.5);
}
}
