#sendVoicePage .voiceRecordTosat {
  background: rgba(0, 0, 0, 0.2);
  width: 300rpx;
  height: 200rpx;
  border-radius: 10rpx;
  line-height: 200rpx;
}
#sendVoicePage .voiceRecordTosat .cuIcon-voice {
    font-size: 100rpx;
    margin-right: 20rpx;
}
@-webkit-keyframes stretchdelay {
0% {
    background-color: #666666;
}
100% {
    background-color: #FFFFFF;
}
}
@keyframes stretchdelay {
0% {
    background-color: #666666;
}
100% {
    background-color: #FFFFFF;
}
}
#sendVoicePage .voiceRecordTosat .voiceAni .rect {
    height: 8rpx;
    border-radius: 6rpx;
    margin: 10rpx 0;
}
#sendVoicePage .voiceRecordTosat .voiceAni .rect1,
  #sendVoicePage .voiceRecordTosat .voiceAni .rect2,
  #sendVoicePage .voiceRecordTosat .voiceAni .rect3,
  #sendVoicePage .voiceRecordTosat .voiceAni .rect4 {
    background-color: #666666;
    -webkit-animation: stretchdelay 1.2s infinite ease-in-out;
            animation: stretchdelay 1.2s infinite ease-in-out;
}
#sendVoicePage .voiceRecordTosat .voiceAni .rect1 {
    width: 50rpx;
    -webkit-animation-delay: -0.8s;
            animation-delay: -0.8s;
}
#sendVoicePage .voiceRecordTosat .voiceAni .rect2 {
    width: 46rpx;
    -webkit-animation-delay: -0.9s;
            animation-delay: -0.9s;
}
#sendVoicePage .voiceRecordTosat .voiceAni .rect3 {
    width: 42rpx;
    -webkit-animation-delay: -1.0s;
            animation-delay: -1.0s;
}
#sendVoicePage .voiceRecordTosat .voiceAni .rect4 {
    width: 38rpx;
    -webkit-animation-delay: -1.1s;
            animation-delay: -1.1s;
}
#sendVoicePage .voiceRecordTosat .voiceAni .rect5 {
    width: 34rpx;
    background-color: #FFFFFF;
}
#sendVoicePage .voice_action {
  position: fixed;
  bottom: 100rpx;
  left: 0;
  width: 100%;
}
#sendVoicePage .voice_action .voice_init {
    width: 220rpx;
    height: 220rpx;
    line-height: 220rpx;
    background-color: #FFFFFF;
    color: #333333;
    margin: 20rpx auto 0;
}
#sendVoicePage .voice_action .voice_handle {
    margin-top: 20rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    -webkit-justify-content: space-around;
            justify-content: space-around;
}
#sendVoicePage .voice_action .voice_handle .voice_reset,
    #sendVoicePage .voice_action .voice_handle .voice_send {
      width: 150rpx;
      height: 150rpx;
      line-height: 150rpx;
      color: #FFFFFF;
}
#sendVoicePage .voice_action .voice_handle .voice_reset {
      background: -webkit-linear-gradient(left, #DA61EC, #D04795);
      background: linear-gradient(to right, #DA61EC, #D04795);
}
#sendVoicePage .voice_action .voice_handle .voice_send {
      background: -webkit-linear-gradient(left, #16BDBB, #2464CE);
      background: linear-gradient(to right, #16BDBB, #2464CE);
}
#sendVoicePage .voice_action .voice_handle .voice_play {
      width: 220rpx;
      height: 220rpx;
      line-height: 220rpx;
      background-color: #FFFFFF;
}

