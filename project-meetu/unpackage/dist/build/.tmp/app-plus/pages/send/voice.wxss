#sendVoicePage .voice_action {
  position: fixed;
  bottom: 100rpx;
  left: 0;
  width: 100%;
}
#sendVoicePage .voice_action .voice_init {
    width: 180rpx;
    height: 180rpx;
    line-height: 180rpx;
    background-color: #FFFFFF;
    color: #333333;
    margin: 20rpx auto;
}
#sendVoicePage .voice_action .voice_handle {
    margin-top: 20rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-box-align: center;
    -webkit-align-items: center;
            align-items: center;
    -webkit-justify-content: space-around;
            justify-content: space-around;
}
#sendVoicePage .voice_action .voice_handle .voice_reset,
    #sendVoicePage .voice_action .voice_handle .voice_send {
      width: 120rpx;
      height: 120rpx;
      line-height: 120rpx;
      color: #FFFFFF;
}
#sendVoicePage .voice_action .voice_handle .voice_reset {
      background: -webkit-linear-gradient(left, #DA61EC, #D04795);
      background: linear-gradient(to right, #DA61EC, #D04795);
}
#sendVoicePage .voice_action .voice_handle .voice_send {
      background: -webkit-linear-gradient(left, #16BDBB, #2464CE);
      background: linear-gradient(to right, #16BDBB, #2464CE);
}
#sendVoicePage .voice_action .voice_handle .voice_play {
      width: 180rpx;
      height: 180rpx;
      line-height: 180rpx;
      background-color: #FFFFFF;
}

